pipeline {
    agent any

    stages {
        stage('docker build') {
            steps {
                sh '''
                #ECR user name pass
                aws ecr get-login-password --region ap-south-1 | sudo docker login --username AWS --password-stdin 821151021325.dkr.ecr.ap-south-1.amazonaws.com
                #docker build image
                sudo docker build -t 821151021325.dkr.ecr.ap-south-1.amazonaws.com/apache:$BUILD_NUMBER .
                #push image to ecr
                sudo docker push 821151021325.dkr.ecr.ap-south-1.amazonaws.com/apache:$BUILD_NUMBER
                '''
            }
        }
    }
}